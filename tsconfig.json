{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "baseUrl": "./",
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "paths": {
            "translationsKeys/*": ["src/translationsKeys/*"],
            "interfaces/*": ["src/interfaces/*"],
            "services/*": ["src/services/*"],
            "types/*": ["src/types/*"],
            "helper/*": ["src/helper/*"],
            "src/*": ["src/*"],
            "utils/*": ["src/utils"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "files": ["./types.d.ts"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "types": ["node"]
}
